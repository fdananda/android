<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EditarActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/abc_vector_test"
        android:gravity="right"
        android:onClick="cancelar" />

    <EditText
        android:id="@+id/editTextAtributo1Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Atributo 1"
        android:inputType="textPersonName"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/editTextAtributo2Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Atributo 2"
        android:inputType="textPersonName"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/editTextAtributo3Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Atributo 3"
        android:inputType="textPersonName"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/buttonEditarDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="atualizar"
        android:text="Atualizar Dados" />

</LinearLayout>
