<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewRecuperarAtributo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_busy"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="TextViewAbributo1"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/TextViewRecuperarAtributo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_away"
                android:drawablePadding="5dp"
                android:padding="1dp"
                android:text="TextViewDescricao1" />

            <TextView
                android:id="@+id/TextViewRecuperarAtributo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:drawablePadding="5dp"
                android:padding="1dp"
                android:text="TextViewDescricao1" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

</LinearLayout>
