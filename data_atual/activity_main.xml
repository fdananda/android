<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTextoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonObterData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="obterDataAtual"
        android:text="Obter Data Atual" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textViewTextoHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonObterHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="obterHoraAtual"
        android:text="Obter Hora Atual" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textViewDetalhesDataHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDetalhesDataHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="obterDetalhesDataHora"
        android:text="Obter Detalhes Data / Hora" />
</LinearLayout>
